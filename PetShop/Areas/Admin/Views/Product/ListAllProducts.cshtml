@using PetShop.Models
@model List<Product>

@{
    ViewBag.Title = "ListAllProducts";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section masterjs{
    <script>
        function ProductInfo(item) {
            var productId = $(item).attr('itemid');

            var obj = {
                id: productId
            };

            $.ajax({
                url: '/Admin/Product/Details',
                method: 'POST',
                data: obj,
                success: function (data) {
                    if (data != "CannotFindCustomer") {
                        $('.full-name').val(data.FullName);
                        console.log(data.Gender);
                        if (data.Gender == true) {
                            $('#male_' + customerId).prop('checked', true);
                        }
                        else {
                            $('#female_' + customerId).prop('checked', true);
                        }
                        $('.username').val(data.Username);
                        $('.address').val(data.Address);
                        $('.phone').val(data.Phone);
                        $('.email').val(data.Email);
                        $('#myModal_' + customerId).modal();
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra.');
                }
            });
        };

        function UpdateProduct(item) {
            var customerId = $(item).attr('itemid');
            var fullName = $('.full-name').val();
            var gender = $("input[name='gender']:checked").val();
            var username = $('.username').val();
            var address = $('.address').val();
            var phone = $('.phone').val();
            var email = $('.email').val();

            var obj = {
                id: customerId,
                fullName: fullName,
                gender: gender,
                username: username,
                address: address,
                phone: phone,
                email: email
            };

            console.log(obj);

            $.ajax({
                url: '/Admin/Customer/Update',
                method: 'POST',
                data: obj,
                success: function (data) {
                    if (data == "Success") {
                        alert('Cập nhật thành công!');
                        $('#myModal_' + customerId).modal('toggle');
                        window.location.reload();
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra.');
                }
            });
        };

        $(document).ready(function () {
            $('.btn-update').click(function (event) {
                event.preventDefault();
            });

            $('.btn-save-customer').click(function (event) {
                event.preventDefault();
            });
        });
    </script>
}

<br>
<h3>Sản phẩm</h3>
<!-- sorting and searching -->
<div class="row my-2">
    <div class="col-sm-6">
        <div class="sort d-inline-block">
            <select name="sort" id="sort" class="form-control d-inline">
                <option selected>Sắp xếp...</option>
                <option value="username">Sắp xếp tên sản phẩm</option>
                <option value="modify-date">Sắp xếp ngày nhập</option>
                <option value="price">Sắp xếp theo giá</option>
                <option value="stock">Sắp xếp theo số lượng tồn kho</option>
            </select>
        </div>

    </div>
    <div class="col-sm-6">
        <form class="form-inline my-2 my-lg-0 float-right">
            <input class="form-control mr-sm-2 search-input" type="search" placeholder="Tìm kiếm..." aria-label="Search">
            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr class="thead-dark">
            <th scope="col"></th>
            <th scope="col">Hình Ảnh</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Loại</th>
            <th scope="col">Số lượng kho</th>
            <th scope="col" class="text-center">
                <a href="#" class="btn btn-info" data-toggle="modal" data-target="#ModalAddNewProduct">Thêm mới <i class="fas fa-plus-circle"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Id">
                <th scope="row">@item.Id</th>
                <td>
                    <img src="@Url.Content(@item.Image)" alt="Alternate Text" width="120" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>@item.Quantity</td>
                <td class="text-center">
                    <a href="#" class="mx-1 btn-update" onclick="ProductInfo(this)" itemid="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <div class="modal fade" id="myModal_@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header bg-info">
                                    <h5 class="modal-title text-uppercase" id="modalTitle">Thông tin sản phẩm</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group row mx-2">
                                        <label class="col-sm-3">Họ và tên</label>
                                        <input type="text" class="form-control col-sm-9 full-name" aria-describedby="emailHelp" name="Username">
                                    </div>
                                    <div class="row my-2 mx-2">
                                        <label class="col-sm-3">Giới tính </label>
                                        <div class="col-sm-9">
                                            <div class="form-check-inline">
                                                <label class="form-check-label">
                                                    <input type="radio" class="form-check-input" id="male_@item.Id" name="gender" value="true">Nam
                                                </label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label class="form-check-label">
                                                    <input type="radio" class="form-check-input" id="female_@item.Id" name="gender" value="false">Nữ
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group row mx-2">
                                        <label class="col-sm-3">Tài khoản</label>
                                        <input type="text" class="form-control col-sm-9 username">
                                    </div>

                                    <div class="form-group row mx-2">
                                        <label class="col-sm-3">Địa chỉ</label>
                                        <textarea type="text" class="form-control col-sm-9 address"></textarea>
                                    </div>
                                    <div class="form-group row mx-2">
                                        <label class="col-sm-3">Phone</label>
                                        <input type="text" class="form-control col-sm-9 phone">
                                    </div>
                                    <div class="form-group row mx-2">
                                        <label class="col-sm-3">Email</label>
                                        <input type="text" class="form-control col-sm-9 email">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-primary btn-save-customer" onclick="UpdateProduct(this)" itemid="@item.Id">Lưu</a>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    @Ajax.ActionLink(" ", "Delete", "Customer", new { id = item.Id }, new AjaxOptions
                              {
                                  Confirm = "Bạn có chắc chắn muốn sản phẩm này?",
                                  OnComplete = "$('#row_" + item.Id + "').remove()",
                                  HttpMethod = "Delete"
                              }, new { @class = "fas fa-trash mx-1" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="ModalAddNewProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-uppercase" id="modalTitle">Thêm mới sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.Label("Tên sản phẩm")
                            <div class="col-md-12 p-0">
                                @Html.TextBox("Name", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Giá")
                            <div class="col-md-12 p-0">
                                @Html.TextBox("Price", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Hình Ảnh")
                            <div class="col-md-12 p-0">
                                @Html.TextBox("Image", null, new { @class = "form-control", @readonly = "true" })
                                <button type="button" class="btn btn-outline-dark mt-2" id="selectImage">Chọn ảnh</button>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Mô tả")
                            <div class="col-md-12 p-0">
                                @Html.TextArea("Description", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Số lượng")
                            <div class="col-md-12 p-0">
                                @Html.TextBox("Quantity", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Loại")
                            <div class="col-md-12 p-0">
                                @Html.DropDownList("CategoryId", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Nhà cung cấp")
                            <div class="col-md-12 p-0">
                                @Html.DropDownList("SupplierId", null, new { @class = "form-control" })
                            </div>
                        </div>

                        
                    </div>
                }
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary btn-save-customer" onclick="AddNewProduct()">Thêm</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
</div>