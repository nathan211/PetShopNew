    <!-- end header -->


    <div class="content-body py-3">

        <div class="container">
            @RenderBody()
        </div>

        <!-- cart noti -->
        <div class="cart-noti font-weight-bold  d-none">
            <i class="fas fa-check-circle text-info"></i>
            <span>Đã thêm vào giỏ hàng.</span>
        </div>

    </div>
    <!-- content body -->
    <!-- footer -->
